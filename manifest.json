{
  "name": "Mega Slider",
  "description": "Make the current page red",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": ["micro.png"],
  "browser_action": {
    "default_icon": {
      "19":"icon.png",
      "38":"icon.png"
    },
    "default_title": "Enable listening",
    "default_popup": "background.html"
  },
  "manifest_version": 2
}